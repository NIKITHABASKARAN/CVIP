    "    with sr.AudioFile(audio_path) as source:\n",
    "        print(\"Analyzing audio...\")\n",
    "        audio_data = recognizer.record(source)\n",
    "\n",
    "    try:\n",
    "        print(\"Transcribing speech...\")\n",
    "        text = recognizer.recognize_google(audio_data)\n",
    "        print(\"Transcription: \", text)\n",
    "\n",
